---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
    <div class="flex flex-col h-full w-full justify-center">
        <section
            class="flex flex-col items-center justify-center relative overflow-hidden text-center px-4"
        >
            <!-- Background Blobs -->
            <div
                class="absolute inset-0 overflow-hidden pointer-events-none -z-10"
            >
                <div
                    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/20 rounded-full blur-[120px] opacity-40 animate-blob"
                >
                </div>
            </div>

            <!-- Massive 404: Scaled to fit viewport width OR height -->
            <h1
                class="font-bold tracking-tight leading-none select-none mix-blend-overlay opacity-80"
                style="font-size: min(30vw, 40vh);"
            >
                4<span
                    class="relative z-10 text-transparent bg-clip-text bg-gradient-to-r from-primary to-yellow-300"
                    >0</span
                >4
            </h1>

            <div
                class="relative z-10 -mt-[4vh] bg-background/30 backdrop-blur-sm p-6 rounded-xl border border-white/5 mx-auto max-w-[90vw] md:max-w-lg"
            >
                <h2
                    class="text-2xl md:text-4xl font-semibold mb-4 text-white drop-shadow-2xl"
                >
                    Something's missing here...
                </h2>

                <p
                    class="text-base md:text-lg text-gray-200 mb-8 leading-relaxed font-light"
                >
                    Can't find what you are looking for? Let's get you back on
                    track.
                </p>

                <a
                    href="/"
                    class="glass inline-block hover:bg-white/10 text-white font-medium py-3 px-8 rounded-full transition-all border border-primary/50 hover:border-primary shadow-[0_0_30px_rgba(var(--color-primary),0.3)] hover:shadow-[0_0_50px_rgba(var(--color-primary),0.5)] transform hover:-translate-y-1 text-sm md:text-base"
                >
                    Back to Homepage
                </a>
            </div>
        </section>
    </div>
</Layout>

<style>
    @keyframes blob {
        0% {
            transform: translate(-50%, -50%) scale(1);
        }
        33% {
            transform: translate(-45%, -55%) scale(1.1);
        }
        66% {
            transform: translate(-55%, -45%) scale(0.9);
        }
        100% {
            transform: translate(-50%, -50%) scale(1);
        }
    }
    .animate-blob {
        animation: blob 15s infinite ease-in-out;
    }
</style>
