---
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Hub | Julian Hilgemann"
    noHeader={true}
    noTopPadding={true}
    fullWidth={true}
>
    <!-- specialized style for this page to handle vertical centering perfectly -->
    <style is:global>
        /* Force main to behave as a flex container for vertical alignment on this page */
        main {
            display: flex !important;
            flex-direction: column;
        }
    </style>

    <!-- Background Blobs (Simplified Hero Effect) -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] translate-x-1/3 -translate-y-1/4"
        >
            <div
                class="w-full h-full bg-primary/10 rounded-full blur-[140px] animate-blob"
            >
            </div>
        </div>
        <div
            class="absolute bottom-0 left-0 w-[400px] h-[400px] -translate-x-1/3 translate-y-1/3"
        >
            <div
                class="w-full h-full bg-info/10 rounded-full blur-[120px] animate-blob animation-delay-2000"
            >
            </div>
        </div>
    </div>

    <div
        class="flex-1 w-full flex flex-col items-center justify-center p-4 z-10 my-auto"
    >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-4xl">
            <!-- Homepage -->
            <a href="/" class="hub-card glass group">
                <!-- Using a filled Globe icon to match the weight of Brand icons -->
                <svg
                    class="hub-icon fill-current"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"
                    ></path>
                </svg>
                <div class="text-center">
                    <span class="hub-text">Homepage</span>
                    <p class="hub-subtext">Return to main site</p>
                </div>
            </a>

            <!-- Github -->
            <a
                href="https://github.com/julianhilgemann"
                target="_blank"
                rel="noopener noreferrer"
                class="hub-card glass group"
            >
                <svg
                    class="hub-icon fill-current"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M12 .297a12 12 0 0 0-3.79 23.39c.6.11.82-.26.82-.58l-.01-2.04c-3.34.73-4.04-1.61-4.04-1.61-.55-1.39-1.34-1.76-1.34-1.76-1.09-.75.08-.73.08-.73 1.2.09 1.83 1.24 1.83 1.24 1.07 1.83 2.81 1.3 3.5.99.11-.78.42-1.3.76-1.6-2.66-.3-5.47-1.33-5.47-5.93 0-1.31.47-2.38 1.24-3.22-.12-.3-.54-1.52.12-3.17 0 0 1.01-.32 3.3 1.23a11.5 11.5 0 0 1 6 0c2.28-1.55 3.29-1.23 3.29-1.23.67 1.65.25 2.87.12 3.17.78.84 1.24 1.91 1.24 3.22 0 4.61-2.81 5.62-5.49 5.92.43.37.81 1.1.81 2.22l-.01 3.29c0 .32.22.69.82.57A12 12 0 0 0 12 .297z"
                    ></path>
                </svg>
                <div class="text-center">
                    <span class="hub-text">GitHub</span>
                    <p class="hub-subtext">Code & Projects</p>
                </div>
            </a>

            <!-- LinkedIn -->
            <a
                href="https://linkedin.com/in/julian-hilgemann"
                target="_blank"
                rel="noopener noreferrer"
                class="hub-card glass group"
            >
                <svg
                    class="hub-icon fill-current"
                    viewBox="0 0 310 310"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M72.16,99.73H9.927c-2.762,0-5,2.239-5,5v199.928c0,2.762,2.238,5,5,5H72.16c2.762,0,5-2.238,5-5V104.73C77.16,101.969,74.922,99.73,72.16,99.73z"
                    ></path>
                    <path
                        d="M41.066,0.341C18.422,0.341,0,18.743,0,41.362C0,63.991,18.422,82.4,41.066,82.4c22.626,0,41.033-18.41,41.033-41.038C82.1,18.743,63.692,0.341,41.066,0.341z"
                    ></path>
                    <path
                        d="M230.454,94.761c-24.995,0-43.472,10.745-54.679,22.954V104.73c0-2.761-2.238-5-5-5h-59.599c-2.762,0-5,2.239-5,5v199.928c0,2.762,2.238,5,5,5h62.097c2.762,0,5-2.238,5-5v-98.918c0-33.333,9.054-46.319,32.29-46.319c25.306,0,27.317,20.818,27.317,48.034v97.204c0,2.762,2.238,5,5,5H305c2.762,0,5-2.238,5-5V194.995C310,145.43,300.549,94.761,230.454,94.761z"
                    ></path>
                </svg>
                <div class="text-center">
                    <span class="hub-text">LinkedIn</span>
                    <p class="hub-subtext">Connect & Network</p>
                </div>
            </a>

            <!-- CV -->
            <a
                href="https://drive.google.com/drive/folders/1rinQhUnhTUGad8sRjah9wzfDrARmor_0?usp=sharing"
                target="_blank"
                rel="noopener noreferrer"
                class="hub-card glass group"
            >
                <svg
                    class="hub-icon fill-current"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"
                    ></path>
                </svg>
                <div class="text-center">
                    <span class="hub-text">CV / Resume</span>
                    <p class="hub-subtext">Request Access</p>
                </div>
            </a>
        </div>
    </div>
</Layout>

<style>
    @keyframes blob {
        0% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(30px, -50px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
        100% {
            transform: translate(0, 0) scale(1);
        }
    }
    .animate-blob {
        animation: blob 7s infinite ease-in-out;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }

    /* Card Styling */
    .hub-card {
        @apply flex flex-col items-center justify-center p-5 sm:p-8 rounded-3xl border border-white/10 transition-all duration-500 relative overflow-hidden;
        min-height: 140px;
    }

    @media (min-width: 640px) {
        .hub-card {
            min-height: 200px;
        }
    }

    /* Hover State: Glow and Border */
    .hub-card:hover {
        @apply border-primary/60 bg-white/5;
        box-shadow: 0 0 30px rgba(245, 158, 11, 0.2);
        transform: translateY(-4px);
    }

    /* Icon Styling */
    .hub-icon {
        @apply w-10 h-10 sm:w-12 sm:h-12 mb-3 sm:mb-4 text-text-secondary transition-all duration-500;
    }

    /* Icon Hover: Orange + Scale + Glow */
    .hub-card:hover .hub-icon {
        @apply text-primary scale-110;
        filter: drop-shadow(0 0 8px rgba(245, 158, 11, 0.4));
    }

    /* Text Styling */
    .hub-text {
        @apply text-lg sm:text-xl font-bold text-text-primary transition-colors duration-300 block;
    }
    .hub-card:hover .hub-text {
        @apply text-primary;
        text-shadow: 0 0 10px rgba(245, 158, 11, 0.3);
    }

    /* Subtext Styling */
    .hub-subtext {
        @apply text-xs sm:text-sm text-text-secondary mt-1 sm:mt-2 font-medium opacity-80 transition-all duration-300;
    }
    .hub-card:hover .hub-subtext {
        @apply text-white opacity-100;
    }
</style>
