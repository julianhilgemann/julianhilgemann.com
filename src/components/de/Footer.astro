            <!-- Language Trigger -->
            <button
                type="button"
                class="opacity-70 hover:opacity-100 hover:text-primary transition-all duration-300 js-open-language"
                aria-label="Sprache Ã¤ndern"
            >
                <svg
                    class="w-6 h-6 fill-none stroke-current transition-all duration-300"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"
                    ></path>
                    <path d="M2 12h20"></path>
