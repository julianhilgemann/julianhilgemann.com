---
import Section from "./Section.astro";

const offerings = [
    {
        title: "Clarity Sprint",
        bestFor:
            "Best for teams needing an immediate, professional executive overview.",
        features: [
            "One high-impact Power BI dashboard",
            "Core KPI definition (3‚Äì5 metrics)",
            "Clean UI with standard templates",
            "1-hour handover & documentation",
        ],
        price: "‚Ç¨2,500",
        timeline: "1 Week",
        outcome: "You finally see the signals in your data.",
        icon: "circle-alert",
        highlight: "‚ö°",
    },
    {
        title: "Decision Engine",
        badge: "Best Value",
        bestFor:
            'Best for establishing a "Single Source of Truth" with trusted metrics.',
        features: [
            "Full semantic model (Star Schema)",
            "Complex DAX & metric logic",
            "Multi-page report with drill-throughs",
            "Custom CI/UX alignment",
        ],
        price: "‚Ç¨6,000 ‚Äì ‚Ç¨8,500",
        timeline: "3‚Äì5 Weeks",
        outcome: "Leadership acts on numbers they actually trust.",
        icon: "layers",
        highlight: "üìä",
    },
    {
        title: "Analytics System",
        bestFor:
            "Best for companies scaling their BI infrastructure as a backbone.",
        features: [
            "Multi-dashboard ecosystem",
            "Workspace & Deployment strategy",
            "RLS & Governance setup",
            "Performance tuning & optimization",
        ],
        price: "‚Ç¨15,000+",
        timeline: "Project-based",
        outcome: "Reporting infrastructure that doesn't break at scale.",
        icon: "database",
        highlight: "üèóÔ∏è",
    },
    {
        title: "Strategic Enterprise",
        bestFor:
            "Best for complex data stacks, AI integration, and high-stakes modeling.",
        features: [
            "Agentic AI & LLM-ready models",
            "Predictive revenue/churn models",
            "Analytics engineering (dbt/SQL)",
            "Strategic advisory & roadmapping",
        ],
        price: "Individually Scoped",
        timeline: "Partnership-based",
        outcome: "Data becomes a proactive competitive advantage.",
        icon: "shield-check",
        highlight: "üõ°Ô∏è",
    },
];
---

<Section
    id="services"
    class="border-t border-white/5 min-h-screen flex flex-col justify-center"
>
    <div class="w-full max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mb-12">
            <h2 class="text-3xl md:text-5xl font-bold mb-6">
                I build the decision layer ‚Äî <br />
                where <span class="text-primary">data</span> becomes <span
                    class="text-info">action</span
                >.
            </h2>
            <div class="text-xl text-text-secondary max-w-3xl space-y-6">
                <p>
                    I specialize in building <strong
                        >Power BI dashboards that translate complex data into
                        clear, trustworthy signals for decision-makers</strong
                    >.
                </p>
                <p>
                    My focus is the last mile of analytics: the semantic model,
                    KPI logic, and visual interface where teams actually
                    interact with data and make decisions.
                </p>
                <p>
                    Behind the scenes, my background across analytics
                    engineering, modeling, and AI ensures that what looks simple
                    on the surface is technically sound, scalable, and
                    consistent underneath.
                </p>
            </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mt-12 mb-12">
            {
                offerings.map((offer) => (
                    <div
                        class={`glass p-8 rounded-2xl card-hover transition-transform duration-300 group flex flex-col h-full relative ${offer.badge ? "!border-primary border-2" : "border border-white/5"}`}
                    >
                        {offer.badge && (
                            <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-primary text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider shadow-lg shadow-primary/20">
                                {offer.badge}
                            </div>
                        )}
                        <div class="mb-6 text-white/90">
                            {offer.icon === "circle-alert" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="40"
                                    height="40"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-primary transition-colors duration-300"
                                >
                                    <circle cx="12" cy="12" r="10" />
                                    <line x1="12" y1="8" x2="12" y2="12" />
                                    <line x1="12" y1="16" x2="12.01" y2="16" />
                                </svg>
                            )}
                            {offer.icon === "layers" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="40"
                                    height="40"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-primary transition-colors duration-300"
                                >
                                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
                                </svg>
                            )}
                            {offer.icon === "database" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="40"
                                    height="40"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-primary transition-colors duration-300"
                                >
                                    <rect
                                        x="2"
                                        y="2"
                                        width="20"
                                        height="8"
                                        rx="2"
                                        ry="2"
                                    />
                                    <rect
                                        x="2"
                                        y="14"
                                        width="20"
                                        height="8"
                                        rx="2"
                                        ry="2"
                                    />
                                    <line x1="6" y1="6" x2="6.01" y2="6" />
                                    <line x1="6" y1="18" x2="6.01" y2="18" />
                                </svg>
                            )}
                            {offer.icon === "shield-check" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="40"
                                    height="40"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-primary transition-colors duration-300"
                                >
                                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10" />
                                    <path d="m9 12 2 2 4-4" />
                                </svg>
                            )}
                        </div>

                        <div class="flex items-center gap-2 mb-2">
                            <h3 class="text-xl font-bold text-white">
                                {offer.title}
                            </h3>
                        </div>

                        <p class="text-text-secondary text-sm mb-6 min-h-[40px]">
                            {offer.bestFor}
                        </p>

                        <div class="flex-grow">
                            <p class="text-xs font-bold text-white uppercase tracking-wider mb-3">
                                What you get:
                            </p>
                            <ul class="space-y-2 mb-8 custom-bullets">
                                {offer.features.map((feature) => (
                                    <li class="text-sm text-text-secondary/80">
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div class="pt-6 border-t border-white/10 mt-auto">
                            <div class="flex justify-between items-end mb-4">
                                <div>
                                    <p class="text-xs text-text-secondary uppercase">
                                        Investment
                                    </p>
                                    <p class="text-lg font-bold text-white">
                                        {offer.price}
                                    </p>
                                </div>
                            </div>
                            <div class="mb-4">
                                <p class="text-xs text-text-secondary uppercase">
                                    Timeline
                                </p>
                                <p class="text-sm text-white">
                                    {offer.timeline}
                                </p>
                            </div>

                            <div class="bg-white/5 p-3 rounded-lg border border-white/5">
                                <p class="text-sm text-text-secondary italic">
                                    <span class="text-primary not-italic font-bold mr-1">
                                        Outcome:
                                    </span>
                                    {offer.outcome}
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="text-center mt-8">
            <p class="text-lg text-text-secondary/80 italic font-medium mb-6">
                Not sure which option fits? I‚Äôm happy to recommend the right
                scope after a short call.
            </p>
            <button
                class="glass hover:bg-white/10 text-white font-medium py-3 px-8 rounded-full transition-all border border-primary hover:border-primary/80 text-center js-open-contact"
            >
                Book a free consultation
            </button>
        </div>
    </div>
</Section>

<style>
    @media (hover: hover) {
        .card-hover:hover {
            transform: translateY(-0.25rem);
        }
    }
</style>
