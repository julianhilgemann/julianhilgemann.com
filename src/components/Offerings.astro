---
const pillars = [
    {
        id: "brain",
        title: "Decision System Design",
        description:
            "Translate business questions into measurable, model-driven analytics systems.",
        points: [
            "KPI architecture",
            "Metrics logic",
            "Analytics roadmap",
            "Stakeholder alignment",
        ],
    },
    {
        id: "infrastructure",
        title: "AI-Accelerated Infrastructure",
        description: "Robust data pipelines and agentic workflows that scale.",
        points: [
            "Data pipelines & warehousing",
            "DBT analytics engineering",
            "Synthetic data prototyping",
            "Agentic workflow automation",
        ],
    },
    {
        id: "analytics",
        title: "Value-Driving Analytics",
        description:
            "Move beyond dashboards to predictive and prescriptive insights.",
        points: [
            "Customer segmentation",
            "Churn prediction",
            "Forecasting & modeling",
            "Next-best-action logic",
        ],
    },
];
---

<div class="grid md:grid-cols-3 gap-6 mt-12">
    {
        pillars.map((pillar) => (
            <div class="glass p-8 rounded-2xl hover:-translate-y-1 transition-transform duration-300 group">
                <div class="mb-6 text-white/90">
                    {pillar.id === "brain" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="40"
                            height="40"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-primary transition-colors duration-300"
                        >
                            <path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z" />
                            <path d="M12 5a3 3 0 1 1 5.997.125 4 4 0 0 1 2.526 5.77 4 4 0 0 1-.556 6.588A4 4 0 1 1 12 18Z" />
                            <path d="M15 13a4.5 4.5 0 0 1-3-4 4.5 4.5 0 0 1-3 4" />
                            <path d="M17.599 6.5a3 3 0 0 0 .399-1.375" />
                            <path d="M6.003 5.125A3 3 0 0 0 6.401 6.5" />
                            <path d="M3.477 10.896a4 4 0 0 1 .585-.396" />
                            <path d="M19.938 10.5a4 4 0 0 1 .585.396" />
                            <path d="M6 18a4 4 0 0 1-1.9-7.4" />
                            <path d="M18 18a4 4 0 0 0 1.9-7.4" />
                        </svg>
                    )}
                    {pillar.id === "infrastructure" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="40"
                            height="40"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-primary transition-colors duration-300"
                        >
                            <rect width="16" height="16" x="4" y="4" rx="2" />
                            <rect width="6" height="6" x="9" y="9" />
                            <path d="M15 2v2" />
                            <path d="M15 20v2" />
                            <path d="M2 15h2" />
                            <path d="M2 9h2" />
                            <path d="M20 15h2" />
                            <path d="M20 9h2" />
                            <path d="M9 2v2" />
                            <path d="M9 20v2" />
                        </svg>
                    )}
                    {pillar.id === "analytics" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="40"
                            height="40"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-primary transition-colors duration-300"
                        >
                            <polyline points="22 7 13.5 15.5 8.5 10.5 2 17" />
                            <polyline points="16 7 22 7 22 13" />
                        </svg>
                    )}
                </div>
                <h3 class="text-xl font-bold mb-3">{pillar.title}</h3>
                <p class="text-text-secondary text-sm mb-6 leading-relaxed">
                    {pillar.description}
                </p>
                <div class="custom-bullets">
                    <ul class="space-y-2">
                        {pillar.points.map((point) => (
                            <li class="flex items-start text-sm text-text-secondary/80">
                                {point}
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        ))
    }
</div>
